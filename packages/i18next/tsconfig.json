{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "types": ["jest", "@types/jest", "node"],
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "noEmit": false,
        "skipLibCheck": true,
        "allowImportingTsExtensions": false,
        "downlevelIteration": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["dist", "node_modules", "**/__tests__", "**/*.test.ts"]
}
