{
    "name": "@wsxjs/wsx-i18next",
    "version": "0.0.18",
    "description": "i18next integration for WSXJS components",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wsxjs/wsxjs.git",
        "directory": "packages/wsx-i18next"
    },
    "author": "Albert Li <albert.li@wsxjs.com>",
    "license": "MIT",
    "files": [
        "dist",
        "src",
        "!**/__tests__",
        "!**/test"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --tsconfig tsconfig.json",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch --tsconfig tsconfig.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist coverage"
    },
    "keywords": [
        "wsx",
        "i18next",
        "i18n",
        "internationalization",
        "web-components",
        "typescript"
    ],
    "dependencies": {
        "@wsxjs/wsx-core": "workspace:*",
        "i18next": "^23.0.0",
        "i18next-browser-languagedetector": "^7.0.0",
        "i18next-http-backend": "^2.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "peerDependencies": {
        "i18next": "^23.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
