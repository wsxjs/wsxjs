    private handleClick = (event: Event) => {
        logger.debug("SVG icon clicked", { name: this.getAttribute("name") });

        // Dispatch custom event
        this.dispatchEvent(
            new CustomEvent("icon-click", {
                detail: {
                    name: this.getAttribute("name"),
                    originalEvent: event,
                },
                bubbles: true,
