    };

    private handleMouseEnter = (event: Event) => {
        const svg = event.target as SVGElement;
        svg.style.transform = "scale(1.1)";
    };

    private handleMouseLeave = (event: Event) => {
        const svg = event.target as SVGElement;
        svg.style.transform = "scale(1)";
    };

