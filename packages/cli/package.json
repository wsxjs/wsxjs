{
    "name": "@wsxjs/cli",
    "version": "0.0.19",
    "description": "CLI tool for WSXJS initialization and configuration",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "wsx": "./dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wsxjs/wsxjs.git",
        "directory": "packages/cli"
    },
    "author": "Albert Li <albert.li@wsxjs.com>",
    "license": "MIT",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts --clean",
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "wsx",
        "cli",
        "web-components",
        "typescript",
        "init"
    ],
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^11.0.0",
        "ink": "^4.4.1",
        "ink-spinner": "^5.0.0",
        "inquirer": "^10.2.2",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@types/inquirer": "^9.0.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
